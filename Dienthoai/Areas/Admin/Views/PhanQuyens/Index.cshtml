@model IEnumerable<Dienthoai.Models.PhanQuyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Phân Quyền</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenQuyen)
        </th>
        <th>Hành động</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenQuyen)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDQuyen }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDQuyen }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDQuyen })
        </td>
    </tr>
}

</table>
